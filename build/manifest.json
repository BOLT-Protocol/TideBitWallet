{
  "manifest_version": 3,
  "name": "TideBit Wallet",
  "version": "0.1.0",
  "action": {
    "default_icon": {
      "16": "image/icon16.png",
      "48": "image/icon48.png",
      "128": "image/icon128.png"
    },
    "default_title": "TideBit",
    "default_popup": "popup.html"
  },
  "description": "A Crypto Wallet in your Browser",
  "icons": {
    "16": "image/icon16.png",
    "48": "image/icon48.png",
    "128": "image/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ],
  "oauth2": {
    "client_id": "825636571399-vqr5epnjp7e02m5vp3si9952urh8fole.apps.googleusercontent.com",
    "scopes":[
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/userinfo.profile"
    ]
  },
  "permissions": [
    "identity", "management", "storage", "activeTab", "scripting"
  ]
}