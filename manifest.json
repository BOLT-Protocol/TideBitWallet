{
  "manifest_version": 3,
  "name": "TideBitWallet",
  "version": "0.1.0",
  "description": "Build an Extension!",

  "action": {
    "default_icon": {
      "16": "img/icon16.png",
      "48": "img/icon48.png",
      "128": "img/icon128.png"
    },
    "default_title": "Click Me",
    "default_popup": "html/popup.html"
  },

  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },

  "background": {
    "service_worker": "background.js"
  },

  "permissions": [ "contextMenus" ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "javascript/content.js"
      ]
    }
  ]
}