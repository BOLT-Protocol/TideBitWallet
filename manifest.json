{
  "manifest_version": 3,
  "name": "TideBit Wallet",
  "version": "0.1.0",
  "description": "A HD Wallet for TideBit Chain, Ethereum and Bitcoin",

  "action": {
    "default_icon": {
      "16": "img/icon16.png",
      "48": "img/icon48.png",
      "128": "img/icon128.png"
    },
    "default_title": "TideBit Wallet",
    "default_popup": "TideBitWallet.html"
  },

  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },

  "background": {
    "service_worker": "background.js"
  },

  "permissions": [
    "contextMenus",
    "storage",
    "activeTab"
  ],
  "content_scripts": [

  ]
}