{
  "name": "TideBit Wallet",
  "description": "A Crypto Wallet in your Browser",
  "version": "0.1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "build/javascript/bundle.js"
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "TideBitWallet.html",
    "default_icon": {
      "16": "build/image/icon16.png",
      "48": "build/image/icon48.png",
      "128": "build/image/icon128.png"
    }
  },
  "icons": {
    "16": "build/image/icon16.png",
    "48": "build/image/icon48.png",
    "128": "build/image/icon128.png"
  }
}
